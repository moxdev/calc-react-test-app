body {
  font-family: sans-serif
}

.main-content
  text-align: center
  max-width: 1000px
  margin: 0 auto

input[type="text"],
input[type="submit"]
  display: block
  width: 100%
  text-align: center
  text-transform: uppercase
  font-weight: 700
  border: 1px solid #333
  margin: 1em 0

button
  border: 1px solid #333333
  padding: .5em 1em
  background: transparent
