.landing-page-wrapper
  text-align: center
  max-width: 1000px
  margin: 0 auto

  h1
    text-transform: uppercase

  form 
    max-width: 500px
    margin: 0 auto

  input[type="text"],
  input[type="submit"]
    display: block
    width: 100%
    text-align: center
    text-transform: uppercase
    font-weight: 700
    border: 1px solid #333
    margin: 1em 0
    padding: .5em 1em

  button
    border: 1px solid #333333
    padding: .5em 1em
    background: transparent